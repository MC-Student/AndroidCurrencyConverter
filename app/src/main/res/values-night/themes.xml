<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TermProjectAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <color name="backgrounddefaultcolor">@color/secondaryLightColor</color>
        <!-- For colored text; default is black/dark-gray (Day) or
        white/light-gray (Night) -->
        <color name="primarytextcoloredcolor">@color/primaryDarkColor</color>
        <color name="secondarytextcoloredcolor">@color/primaryColor</color>
        <!-- Matching colored background -->
        <color name="backgroundcoloredcolor">@color/primaryLightColor</color>
    </style>
</resources>