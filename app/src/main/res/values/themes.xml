<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Base application theme.  -->
    <style name="Theme.TermProjectAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- For compatibility -->
        <item name="colorAccent">@color/secondaryColor</item>

        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSecondaryVariant</item>

        <!--  Customize your theme here.  -->
    </style>

    <style name="Theme.TermProjectAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TermProjectAndroid.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.TermProjectAndroid.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>