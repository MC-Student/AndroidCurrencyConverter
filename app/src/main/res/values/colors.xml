<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_default_color">@android:color/background_light</color>

    <color name="primaryColor">#4169E1</color>
    <color name="primaryLightColor">#eeffff</color>
    <color name="primaryDarkColor">#8aacc8</color>
    <color name="secondaryColor">#cfd8dc</color>
    <color name="secondaryLightColor">#ffffff</color>
    <color name="secondaryDarkColor">#9ea7aa</color>
    <color name="primaryTextColor">#000000</color>
    <color name="secondaryTextColor">#000000</color>


    <!-- For colored text; default is black/dark-gray (Day) or white/light-gray (Night) -->
    <color name="primary_text_colored_color">@color/primaryDarkColor</color>
    <color name="secondary_text_colored_color">@color/primaryColor</color>

    <!-- Matching colored background -->
    <color name="background_colored_color">@color/primaryLightColor</color>

</resources>